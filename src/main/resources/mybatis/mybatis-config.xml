<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <!-- 모든 캐시를 전역적으로 활성화 할지 설정 -->
        <setting name="cacheEnabled" value="false"/>
        <!-- Bean 객체와 Database Table Column 자동 매핑 설정 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- mybatis가 로거 이름에 추가할 접두사 문자열 지정 -->
        <setting name="logPrefix" value="erp.mybatis.sql."/>
        <!-- mybatis가 사용할 로깅 구현체 명시(없을 경우 자동검색) -->
        <setting name="logImpl" value="SLF4J"/>
    </settings>

    <!-- 타입의 alias 등록 -->
    <typeAliases>
        <typeAlias type="java.lang.Boolean" alias="boolean"/>
        <typeAlias type="java.lang.Long" alias="long"/>
        <typeAlias type="java.lang.Integer" alias="int"/>
        <typeAlias type="java.lang.Integer" alias="integer"/>
        <typeAlias type="java.lang.Integer" alias="Integer"/>
        <typeAlias type="java.lang.String" alias="string"/>
        <typeAlias type="java.lang.String" alias="String"/>
    </typeAliases>

    <!--    <mappers>-->
    <!--        <mapper resource="/mybatis/mapper/*.xml"/>-->
    <!--    </mappers>-->

</configuration>